semaforo d = 0, c = 0, m = 0

void ap_CD(){

  down(&d);
  down(&c);

}

void ap_CM(){

  down(&m);
  down(&c);

}

void ap_MD(){

  down(&d);
  down(&m);

}


void gerente(){

  int r1 = sort()
  int r2 = sort()

  if(r1 == 0 || r2 == 0){
	up(&d);
	up(&d);
  }
    if(r1 == 1 || r2 == 1){
	up(&c);
	up(&c);
  }

    if(r1 == 2 || r2 == 2){
	up(&m);
	up(&m);
  }

  


}
